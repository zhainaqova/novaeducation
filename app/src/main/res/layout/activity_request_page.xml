<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RequestPage">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/back_toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            app:layout_anchor="@+id/toolbarLayout"
            app:layout_anchorGravity="center"
            app:popupTheme="@style/AppTheme.popUpOverlay">

            <ImageView
                android:id="@+id/image_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/back" />

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>


    <LinearLayout
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:alpha="0.7"
        android:orientation="vertical"
        android:background="@drawable/request_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Фамилия"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/palanquindark"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:hint="Ваше фамилия"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="350dp"
            android:background="@drawable/request_design"
            android:layout_gravity="center"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:alpha="0.7"
        android:orientation="vertical"
        android:background="@drawable/request_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Имя"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/palanquindark"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:hint="Ваше имя"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="350dp"
            android:background="@drawable/request_design"
            android:layout_gravity="center"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:alpha="0.7"
        android:orientation="vertical"
        android:background="@drawable/request_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Номер телефона"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/palanquindark"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:hint="Ваш номер"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="350dp"
            android:background="@drawable/request_design"
            android:layout_gravity="center"
            android:phoneNumber="true"
            android:textColorHint="@color/white"
            android:layout_height="50dp"/>
    </LinearLayout>
    <Button
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/request_design"
        android:text="Подать заявку"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:elevation="10dp"
        android:textStyle="bold"/>
</LinearLayout>